#!/bin/bash
source ./distro_check.sh
distro_check

if [ $EUID -ne 0 ]; then
    echo "donotwant: I needz root plz."
    exit 1;
fi;

RETVAL=0
case ${PACKAGEMGR} in
    "yaourt")
        ${PACKAGEMGR} -Rs $1
        RETVAL=$?
        ;;
    "aptitude")
        ${PACKAGEMGR} purge $1
        RETVAL=$?
        ;;
    "yum")
        ${PACKAGEMGR} erase $1
        RETVAL=$?
        ;;
    "emerge")
        ${PACKAGEMGR} --unmerge $1
        RETVAL=$?
        ;;
    *)
        echo "Sorry, I don't know that one."
        RETVAL=1
        ;;
esac

exit ${RETVAL}
