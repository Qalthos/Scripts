#!/bin/bash

target=$1
action='start'

if [ $target == 'bai' ]; then
    target=$2
    action='stop'
fi

case $(distro_check.sh) in
"Arch")
    sudo /etc/rc.d/$target $action
    ;;
"Ubuntu")
    sudo service $target $action
    ;;
"Gentoo")
    sudo /etc/init.d/$target $action
    ;;
*)
    echo "Sorry, I don't know that one."
    ;;
esac
