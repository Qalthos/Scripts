#!/bin/bash
source ./distro_check.sh
distro_check

if [ $EUID -ne 0 ]; then
    echo "want: I needz root plz."
    exit 1;
fi;

RETVAL=0
case ${PACKAGEMGR} in
    "yaourt")
        ${PACKAGEMGR} -S $1
        RETVAL=$?
        ;;
    "aptitude" | "yum")
        ${PACKAGEMGR} install $1
        RETVAL=$?
        ;;
    "emerge")
        ${PACKAGEMGR} $1
        RETVAL=$?
        ;;
    *)
        echo "Sorry, I don't know that one."
        RETVAL=1
        ;;
esac

exit ${RETVAL}
