#!/bin/bash

case $DISTRO in
"Arch")
    $PKGMGR -S $@
    ;;
"Debian" | "Ubuntu" | "Fedora" | "LinuxMint")
    sudo $PKGMGR install $@
    ;;
"Darwin")
	$PKGMGR install $@
	;;
"Gentoo")
    sudo $PKGMGR -av $@
    ;;
*)
    echo "Sorry, I don't know how to install packages on $DISTRO."
    ;;
esac
